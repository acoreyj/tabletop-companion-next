{
  "name": "tabletop-companion-workspace",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r --parallel build",
    "start": "pnpm -r --parallel start",
    "lint": "pnpm -r --parallel lint",
    "dev:rag": "pnpm --filter @tabletop-companion/rag-server dev",
    "build:rag": "pnpm --filter @tabletop-companion/rag-server build",
    "start:rag": "pnpm --filter @tabletop-companion/rag-server start",
    "lint:rag": "pnpm --filter @tabletop-companion/rag-server lint",
    "dev:tblcmp": "pnpm --filter tblcmp dev",
    "build:tblcmp": "pnpm --filter tblcmp build",
    "start:tblcmp": "pnpm --filter tblcmp start",
    "lint:tblcmp": "pnpm --filter tblcmp lint"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
